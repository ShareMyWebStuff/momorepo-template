{
    "$schema": "https://turborepo.org/schema.json",
    "pipeline": {
        "build": {
            "cache": false,
            "env": [ "DATABASE_SECRET_ARN", "DEPLOY_BUCKET_NAME" ]
        },
        "synth": {
            "cache": false
        },
        "deploy": {
            "cache": false
        },
        "destroy": {
            "cache": false
        },
        "cdk": {
            "cache": false
        },
        "test": {},
        "dev": {
            "cache": false,
            "persistent": true
        },
        "lint": {
            "outputs": []
        },
        "format": {
            "outputs": []
        } 
    },
    "globalEnv": ["DATABASE_SECRET_ARN", "DEPLOY_BUCKET_NAME"]
}
